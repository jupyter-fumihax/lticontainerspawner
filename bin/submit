#!/bin/bash
#
# usage .... submit [file1] [file2] [ifile3] .....
#
#  v1.1.1  2025/06/03   add log file
#  v1.2.0  2025/06/04   add no_changed message
#

# for log file
LOG=".submits.log"
DTM=`date +%Y-%m-%d" "%T`

copy_and_log() {
    echo "---------------------" >> $LOG
    echo "$DTM" >> $LOG
    ls -l --time-style=+'%Y-%m-%d %T' "$1" >> $LOG
    DFF="first"
    if [ "$2" != "" -a -f "$2" ]; then
        ls -l --time-style=+'%Y-%m-%d %T' "$2" >> $LOG
        DFF=`diff "$1" "$2" | head -100`
        # 追加：同一ファイルなら警告を表示
        if [ "$DFF" = "" ]; then
            output_warn "no changes detected for \"$1\" -> \"$2\" !!!"
        fi
    fi
    #
    cp "$1" "$2" 2> >(tee -a $LOG 1>&2)
    chmod g+r,o-rwx "$2" 2> >(tee -a $LOG 1>&2)
    #
    echo "+++ result +++" >> $LOG
    ls -l --time-style=+'%Y-%m-%d %T' "$2" >> $LOG
    #
    if [ "$DFF" == "" ]; then
        echo "+ no_changed +" >> $LOG
    else
        if [ "$DFF" != "first" ]; then
            echo "++++ diff ++++" >> $LOG
            echo "$DFF" >> $LOG
        fi
    fi
}

output_error_log() {
    echo "---------------------" >> $LOG
    echo "ERROR: $DTM" >> $LOG
    echo "ERROR: $1" >> $LOG
    echo "ERROR: $1" 1>&2
}

output_warn() {
    echo "WARNING: $1" >> "$LOG"
    echo "WARNING: $1" 1>&2
}

#
#
PRS=`echo $NB_PRSNALS | awk -F" " '{print $1}' | awk -F":" '{print $1}'`
if [ "$PRS" != "" ] ; then
    PRS=${HOME}/${PRJCT_DIR}/${WORK_DIR}/${PRS}
    cd $PRS
fi
if [ ! -f $LOG ]; then
    touch $LOG
fi

#
SBT=`echo $NB_SUBMITS | awk -F" " '{print $1}'`
DST=`echo $SBT | awk -F":" '{print $1}'`
LNK=`echo $SBT | awk -F":" '{print $2}'`
if [ "$DST" == "" ] ; then 
    output_error_log "the NB_SUBMITS environment variable is wrong! ("$NB_SUBMITS")"
    exit 1
fi
DST=${HOME}/${PRJCT_DIR}/${WORK_DIR}/${DST}

#
#
if [ -d $DST ]; then
    IFS=$'\n'
    USR=`whoami`
    #
    if [ $# -gt 0 ]; then       # ファイル名を指定
        for FLN in $*; do
            if [ ! -d $FLN ]; then
                FL=`echo $FLN | awk -F"/" '{print $NF}'`
                echo "copying ...  \"$FLN\"  \"${LNK}/${USR}_${FL}\"" 1>&2
                copy_and_log "$FLN" "${DST}/${USR}_${FL}"
            fi
        done
    else                        # ファイル名の指定なし
        FLS=`ls | grep -e '\.ipynb$'`
        for FLN in $FLS; do
            if [ ! -d $FLN ]; then
                echo "copying ...  \"$FLN\"  \"${LNK}/${USR}_${FLN}\"" 1>&2
                copy_and_log "$FLN" "${DST}/${USR}_${FLN}"
            fi
        done
    fi
else
    output_error_log "submit directory is not exist!"
    exit 1 
fi

exit 0

